<Window x:Class="CarSearch.WishCart"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CarSearch"
        mc:Ignorable="d"
        Title="WishCart" Height="450" Width="800" Background="ForestGreen">

    <StackPanel>
        <ListBox x:Name="Results" ItemsSource="{Binding Parent.WishContents}" SelectedItem="{Binding SelectedCar}" ItemTemplate="{StaticResource ProductTemplate}"
                 MaxHeight="400"/>
        <Button  Content="Calculate Monthy Payments" Height="25" Width="175" Command="{Binding CalculateCommand}" Click="Close"/>
        <Button Content="Insurance Rates" Height="25" Width="175" Command="{Binding CalculateInsuranceCommand}" Click="Close"/>
        <Border BorderBrush="Gold" BorderThickness="5" Width="785" Grid.RowSpan="5" Grid.ColumnSpan="3"/>

    </StackPanel>
    
</Window>
