<UserControl x:Class="CarSearch.WishlistDisplay"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CarSearch"
             Background="White"
             Height="300" Width="500"   >

    <UserControl.DataContext>
        <local:WishlistDisplayVM/>
    </UserControl.DataContext>


    <ListBox x:Name="CarListBox" ItemsSource="{Binding CarCollection}"
             SelectedItem="{Binding WishlistCar}" Background="AliceBlue"
             ItemTemplate="{StaticResource ProductTemplate}"/>

</UserControl>
