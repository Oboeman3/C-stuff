<Window x:Class="CarSearch.MonthyPayment"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CarSearch"
        mc:Ignorable="d"
        Title="MonthyPayment" Height="450" Width="800" Background="ForestGreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Label Content="Calculate Your Monthly Payment" Grid.Column="0" Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="35" FontWeight="Bold" Grid.ColumnSpan="5"/>
        <Label Content="{Binding Parent.SelectedCar.Price}" Grid.Column="0" Grid.Row="1" Height="50" FontSize="18" FontWeight="Bold"/>
        <Label Content="How Many Months Do You Want To Pay For The Car?" Grid.Column="1" Grid.Row="1" Grid.ColumnSpan="3" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="18" FontWeight="Bold"/>
        <ComboBox x:Name="Months" Grid.Column="4" Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center" Width="150">
            <ComboBoxItem Content="24 Months"/>
            <ComboBoxItem Content="36 Months"/>
            <ComboBoxItem Content="48 Months"/>
        </ComboBox>
        <Button x:Name="CalculateButton" Content="Submit" Grid.Column="4" Grid.Row="2" Height="25" Width="125" Click="Exit" Command="{Binding CalculateCommand}"/>
        <Button x:Name="ExitButton" Content="Exit" Grid.Column="0" Grid.Row="2" Height="25" Width="125" Click="Exit"/>

        <Label Content="{Binding x}" Grid.Column="0" Grid.Row="2" Grid.ColumnSpan="3" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="18" FontWeight="Bold"/>
                <Border BorderBrush="Gold" BorderThickness="5" Width="790" Grid.RowSpan="5" Grid.ColumnSpan="5"/>


    </Grid>
</Window>
